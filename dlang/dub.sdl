name "viewbuffer";

sourcePaths "src";
testSourcePaths "tests";

configuration "default" {
    dependency "inmath" version="~>1.0.5"

    targetType "executable"
    targetPath "out/"
    workingDirectory "out/"
    copyFiles "libs/*" "files/*"
}

configuration "betterc" {
    targetType "executable"
    dflags "-betterC"
    lflags "-lz"
    targetPath "out/"
    workingDirectory "out/"
    versions "BetterC"
}
